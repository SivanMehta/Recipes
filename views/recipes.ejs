<html>
<head>
    <% include partials/header %>
</head>
<body>
    <nav>
        <div class = "container">
            <div class="nav-wrapper">
                <a href="#" class="brand-logo right">Recipe Generator</a>
                <div class = "col s12">
                    <a href="/" class="breadcrumb">Home</a> > 
                    <a href="#!" class="breadcrumb">Recipes</a>
                </div>
            </div>
        </div>
    </nav>
    <div class = "container">
        <h1>Here a list of the saved recipes!</h1>
        <ul>
            <% var recipes = Object.keys(recipes); %>
            <% for(var i = 0; i < recipes.length; i++) { %>
                <% var recipe_title = recipes[i].split("/")[2] %>
                <li><a href = "/recipes/<%= recipe_title %>"><%= recipe_title %></a></li>
            <% } %>
        </ul>
    </div>
</body>
</html>